{
  "name": "sveltekit-pocketbase-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "typegen": "pocketbase-typegen --db ./pb_data/data.db",
    "hooks:dev": "vite build --watch --config hooks/vite.config.ts",
    "hooks:build": "vite build --config hooks/vite.config.ts"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.5.27",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "pocketbase": "^0.21.5",
    "pocketbase-typegen": "^1.2.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.8.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.4"
  },
  "type": "module"
}
